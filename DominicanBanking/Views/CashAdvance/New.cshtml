@using DominicanBanking.Core.Application.ViewModel.CashAdvance
@model SaveCashAdvanceViewModel

@{
    ViewData["Title"] = "Cash Advances";
}

<div class="row d-flex justify-content-center mt-5">
    <div class="col-4">
        <div class="card">
            <div class="card-header bg-primary"><h3 class="card-title text-white text-center">Cash Advance</h3></div>
            <div class="card-body">
               @Html.ValidationSummary(false,"",new{@class="text-danger"})
                <form method="post" asp-action="New" asp-controller="CashAdvance">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="form-label">Credit Card:</label>
                            <select class="form-control" asp-items="ViewBag.CreditCard" asp-for="CreditCardNumberFrom" required>
                                <option value="">Select a Credit Card</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="form-label">Account:</label>
                            <select class="form-control" asp-items="ViewBag.Account" asp-for="IdentifyNumberTo" required>
                                <option value="">Select an Account</option>
                            </select>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="form-label">Amount to Advance:</label>
                            <input type="number" step="any" class="form-control" asp-for="Amount"/>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary w-100">Advance</button>
                                <a asp-action="Client" asp-controller="Home" class="btn btn-warning w-100">Cancel</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

