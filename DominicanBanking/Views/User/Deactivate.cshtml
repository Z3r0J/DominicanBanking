@using DominicanBanking.Core.Application.ViewModel.User
@model UserViewModel

@{
    ViewData["Title"] = "Deactivate User";
}

<div class="container-fluid">
    <div class="row d-flex justify-content-center mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-danger"><h3 class="text-white text-center">Deactivate @Model.FirstName account's</h3></div>
                <div class="card-body">
                    <h5 class="card-text">Are you sure want to Deactivate @Model.FirstName Account's?</h5>
                    <form method="post" asp-action="Deactivate" asp-controller="User">
                        <input type="hidden" value="@Model.Id" asp-for="Id" />
                        <button type="submit" class="btn btn-danger w-100">Deactivate</button>
                        <a asp-action="UserList" asp-controller="User" class="btn btn-success w-100">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

